	// componentes
	JButton cmd_sair;
	JButton cmd_ajuda;
	
	public frmMenuPrincipal(String titulo, Dimension dimensao){

		// definir o título do formulário
		super(titulo);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setSize(dimensao);
		setLayout(null);
		
		// criar os botões
		cmd_sair = new JButton("Sair");
		cmd_sair.setBounds(50, 50, 120, 30);
		
		// adicionar os botões ao formulário
		add(cmd_sair);
		
		
	}
	
}
